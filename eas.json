{
  "cli": {
    "version": ">= 16.18.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "node": "20.19.4",
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "autoIncrement": true
      },
      "ios": {
        "simulator": false,
        "autoIncrement": true
      }
    },
    "production": {
      "node": "20.19.4",
      "env": {
        "GOOGLE_SERVICES_JSON": "@GOOGLE_SERVICES_JSON",
        "EXPO_PUBLIC_LOCAL_API_URL": "https://testing.hithoy.com/api"
      },
      "android": {
        "buildType": "apk",
        "autoIncrement": true
      },
      "ios": {
        "distribution": "store",
        "autoIncrement": true
      }
    }
  }
}